<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainnFragment">

    <fragment
        android:id="@+id/mainnFragment"
        android:name="com.example.tmdbpopularmovie.screens.main.MainnFragment"
        android:label="fragment_mainn"
        tools:layout="@layout/fragment_mainn" >
        <action
            android:id="@+id/action_mainnFragment_to_detailFragment2"
            app:destination="@id/detailFragment2" />
        <action
            android:id="@+id/action_mainnFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment2"
        android:name="com.example.tmdbpopularmovie.screens.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment2_to_mainnFragment"
            app:destination="@id/mainnFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.tmdbpopularmovie.screens.favorite.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_mainnFragment"
            app:destination="@id/mainnFragment" />
        <action
            android:id="@+id/action_favoritesFragment_to_detailFragment2"
            app:destination="@id/detailFragment2" />
    </fragment>
</navigation>